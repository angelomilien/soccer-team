<h1>Signup here<h1><br>


<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @user, url: '/signup' do |f|%>

   <%= f.label :username %>
   <%= f.text_field :user_name%><br>

   <%= f.label :email %>
   <%= f.email_field :email%><br>

   <%= f.label :password %>
   <%= f.password_field :password%><br><br>

   <%= f.submit "Submit" %>
<%end%>