<%else%>
    <ul>
      <% @players.each do |p| %>
        <li>
          <%= link_to p.name, player_path(p)%>
      
        </li><br>
        <% end %>
    </ul>
<%end%>

<%=button_to("Add player", new_player_path, method: 'get')%><br>

